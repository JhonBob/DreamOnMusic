<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/nowplay_default"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal"
            android:background="@color/half_transparent">
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/my_music"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的"
                android:textSize="20sp"
                android:clickable="true"
                android:textColor="@drawable/table_text_color"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/warehouse"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="乐库"
                android:layout_weight="1"
                android:textSize="20sp"
                android:clickable="true"
                android:textColor="@drawable/table_text_color"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/sing"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="唱歌"
                android:textSize="20sp"
                android:clickable="true"
                android:layout_weight="1"
                android:textColor="@drawable/table_text_color"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/video"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="视频"
                android:textSize="20sp"
                android:layout_weight="1"
                android:clickable="true"
                android:textColor="@drawable/table_text_color"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/more"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_gravity="center"
                android:src="@drawable/top_more_selector"/>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_cf_page"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            >
        </android.support.v4.view.ViewPager>

    <ProgressBar
        android:id="@+id/playback_seekbar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:maxHeight="2.0dip"
        android:minHeight="2.0dip"
        android:progressDrawable="@drawable/playback_seekbar2" />

    <LinearLayout
        android:id="@+id/bottom_control"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/half_transparent">
        <ImageView
            android:id="@+id/headicon_iv"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:background="@mipmap/mini_play_controller"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.bob.dreamonmusic.view.AlwaysMarqueeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/kw_common_cl_black_99"
                android:textSize="15sp"
                android:text="当我展翅飞向星河"
                android:paddingTop="2dip"
                android:paddingLeft="10dip"
                android:layout_gravity="center_horizontal">
            </com.bob.dreamonmusic.view.AlwaysMarqueeTextView>
            <com.bob.dreamonmusic.view.AlwaysMarqueeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/kw_common_cl_black_99"
                android:textSize="12sp"
                android:text="苏醒"
                android:paddingLeft="10dip"
                android:layout_gravity="center_horizontal">
            </com.bob.dreamonmusic.view.AlwaysMarqueeTextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:visibility="visible"
                    android:src="@drawable/bottom_pause_selector"
                    android:clickable="true"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bottom_play_selector"
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <ImageView
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/bottom_next_selector"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:layout_width="0dip"
                android:layout_height="30dip"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/bottom_drawer_selector"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>