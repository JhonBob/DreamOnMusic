<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:background="@color/transparent">
            <ImageView
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:background="@mipmap/img_user_default"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="点击登陆"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="登陆后可以享受云同步"
                    android:textSize="12sp"
                    android:textColor="@color/kw_common_cl_black_99"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="3dip"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:background="@drawable/playback_seekbar2"
            android:layout_width="fill_parent"
            android:layout_height="10dip" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:background="@color/transparent"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/local_music"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:background="@drawable/local_selector"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本地歌曲"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:background="@drawable/download_selector"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下载管理"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:background="@drawable/recent_selector"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最近播放"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_weight="1"
                    android:background="@drawable/mv_selector"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下载MV"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:background="@drawable/playback_seekbar2"
            android:layout_width="fill_parent"
            android:layout_height="10dip" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的歌单"
                android:textSize="20sp"
                android:layout_margin="10dip"
                android:textColor="@android:color/holo_purple"
                android:layout_gravity="center_vertical"/>
            <ListView
                android:id="@+id/add_music"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            </ListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>