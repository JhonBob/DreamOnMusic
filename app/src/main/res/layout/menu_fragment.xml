<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_user_default"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dip"
                android:layout_marginStart="15dip"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录/注册"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dip"
                android:layout_marginStart="25dip"
                android:textSize="20sp"/>
        </LinearLayout>
        <ImageView
            android:background="@color/kw_common_cl_white_alpha_5"
            android:layout_width="fill_parent"
            android:layout_height="1.0px" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="5">
            <com.bob.dreamonmusic.view.SlidMenuGridView
                android:id="@+id/menu_grid"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:columnWidth="100dp"
                android:gravity="center"
                android:numColumns="auto_fit">
            </com.bob.dreamonmusic.view.SlidMenuGridView>
        </LinearLayout>
        <ImageView
            android:background="@color/kw_common_cl_white_alpha_5"
            android:layout_width="fill_parent"
            android:layout_height="1.0px" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="15">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                <ImageButton
                    android:id="@+id/feed_back"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:background="@drawable/menu_feedback_selector" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="反馈"
                    android:textSize="15sp"
                    android:textColor="@color/kw_common_cl_black_99"
                    android:layout_toRightOf="@id/feed_back"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5.0dip"
                    />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                <ImageButton
                    android:id="@+id/setting"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:background="@drawable/menu_set_up_selector"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:textSize="15sp"
                    android:textColor="@color/kw_common_cl_black_99"
                    android:layout_toRightOf="@id/setting"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5.0dip"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                <ImageButton
                    android:id="@+id/exit"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:background="@drawable/menu_logout_selector"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出"
                    android:textSize="15sp"
                    android:textColor="@color/kw_common_cl_black_99"
                    android:layout_toRightOf="@id/exit"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5.0dip"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
